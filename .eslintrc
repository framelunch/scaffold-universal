{
  "extends": [
    "airbnb",
    "plugin:flowtype/recommended"
  ],
  "plugins": [
    "flowtype"
  ],
  "env": {
    "browser": true,
    "node": true,
    "es6": true
  },
  "parser": "babel-eslint",

  "globals": {
    "browser": true
  },

  "rules": {
    // 同じ関数内で戻り値を返すreturnと返さないreturnがあったら怒る 無効化 serverで困る
    "no-param-reassign": "off",
    // 同じ関数内で戻り値を返すreturnと返さないreturnがあったら怒る 無効化 serverで困る
    "consistent-return": "off",
    // 1行につき1宣言 無効化 FLの流儀と合わない
    "one-var": "off",
    // 比較演算子はすべて===か!==
    "eqeqeq": ["error", "always"],
    // underscore開始の変数やプロパティを禁止する 無効化 思うところあって。
    "no-underscore-dangle": "off",
    // 1行あたりの最大文字数 120 ただしURLとかコメントとか改行で区切りづらいネタは見逃す
    "max-len": ["error", 120, 2, {
      "ignoreUrls": true,
      "ignoreComments": true,
      "ignoreRegExpLiterals": true,
      "ignoreStrings": true,
      "ignoreTemplateLiterals": true
    }],
    // 未使用変数引数 警告
    "no-unused-vars": ["warn", {
      // catchで拾ったエラーは見逃す ホントは処理させないといけないthrowを投げるべきかな・・・
      "caughtErrors": "none",
      // 変数の先頭に_の場合見逃す
      "varsIgnorePattern": "^_",
      // 引数の先頭に_の場合見逃す
      "argsIgnorePattern": "^_"
    }],
    // 1ファイルに付きexportしてるのが1つだけの場合、default exportにしてもらう 無効化 ほっといてくれと。
    "import/prefer-default-export": "off",
    // アローファンクションの引数をカッコで囲むか 必要なときだけ
    "arrow-parens": ["error", "as-needed"],
    // reactコンポーネントのメソッド順を強制 無効化 flowtypeと相性が悪い
    "react/sort-comp": "off"

    /*
    "import/no-extraneous-dependencies": ["error", {
      "devDependencies": true
    }]
    */
  }
}
